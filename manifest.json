{
    "manifest_version": 3,
    "name": "Should I AI?",
    "description": "Because you should try things yourself first",
    "version": "1.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
    ],
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
      },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*", "https://claude.ai/*",  "https://gemini.google.com/*"],
            "js": ["blocker.js"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["blocker.html", "styles.css"],
            "matches": ["https://chatgpt.com/*", "https://claude.ai/*",  "https://gemini.google.com/*"]
        }
    ]
}
