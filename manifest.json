{
    "manifest_version": 3,
    "name": "Should I AI?",
    "description": "Because you should try things yourself first",
    "version": "1.0",
    
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
    ],
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*", "https://claude.ai/*",  "https://gemini.google.com/*"],
            "js": ["blocker.js"],
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["blocker.html", "styles.css"],
            "matches": ["https://chatgpt.com/*", "https://claude.ai/*",  "https://gemini.google.com/*"]
        }
    ]
}
