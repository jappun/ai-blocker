{
    "manifest_version": 3,
    "name": "Should I AI?",
    "description": "Because you can do things yourself",
    "version": "1.0",
    
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://example.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*", "https://claude.ai/*"],
            "js": ["blocker.js"],
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["blocker.html", "styles.css"],
            "matches": ["https://chatgpt.com/*", "https://claude.ai/*"]
        }
    ]
}
